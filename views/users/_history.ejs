<div class="col-12">
    <section class="box">
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <td>
                            <b>Game Id</b>
                        </td>
                        <td>
                            <b>Game Mode</b>
                        </td>
                        <td><b>Topic</b></td>
                    </tr>
                </thead>
                <% for (game of user.games) { %>
                <tr>
                    <td>
                        <a href="/games/<%= game.id %>"><%= game.id %></a>
                    </td>
                    <td>
                        <%= game.type.type %>
                    </td>
                    <td>
                        <%= game.topic.topic %>
                    </td>
                <% } %>
            </table>
             
        </div>
        
    </section>
</div>