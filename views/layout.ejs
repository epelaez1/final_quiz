<html>
	<head>
		<title>Quizzy</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="/stylesheets/main.css" />
	</head>
	<body class="is-preload">
		<div id="page-wrapper">

			<!-- Header -->
					<header id="header">
					<h1><a href="/">Quizzy</a></h1>
					<nav id="nav">
						<ul>
							<% if (!!session.user) { %>
							<li>
								<a href="#" class="button bold">New Game</a>
							</li>
							<li>
								<a href="#" class="icon fa-angle-down"><%= session.user.name %></a>
									<ul>
											<li><a href="/users/<%= session.user.id %>">My Profile</a></li>
											<li><a href="#">History</a></li>
											<li><a href="#">Favourites</a></li>
											<li><a href="/session?_method=DELETE">Log Out</a></li>
									</ul>
							</li>
							<li><a href="/session?_method=DELETE" class="icon fa-sign-out"></a></li>
							<% } else { %>
							<li><a href="/users/new" class="button">Sign Up</a></li>
							<li><a href="/session" class="button">Sign In</a></li>
							<% } %>
						</ul>
					</nav>
				</header>

			<%- body %>
			<!-- Footer -->
				<footer id="footer">
					<ul class="icons">
						<li><a href="https://github.com/epelaez1/final_quiz" class="icon fa-github"><span class="label">Github</span></a></li>
					</ul>
					<ul class="copyright">
						<li>&copy; Quizzy. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
					</ul>
				</footer>

		</div>

		<!-- Scripts -->
			<script src="/js/jquery.min.js"></script>
			<script src="/js/jquery.dropotron.min.js"></script>
			<script src="/js/jquery.scrollex.min.js"></script>
			<script src="/js/browser.min.js"></script>
			<script src="/js/breakpoints.min.js"></script>
			<script src="/js/util.js"></script>
			<script src="/js/main.js"></script>

	</body>
</html>